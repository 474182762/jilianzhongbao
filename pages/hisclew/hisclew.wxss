/* pages/hisclew/hisclew.wxss */
.his_clew{
  height: 100%;
  padding: 0 30rpx;
  background-color: #f1f0f5;
  overflow: hidden;
}
.his_clew .list{
  width:690rpx;
  height:420rpx;
  box-shadow:0 4rpx 24rpx 0 rgba(215,215,215,0.50);
  border-radius:20rpx;
  background-color: #fff;
  padding: 60rpx 40rpx;
  margin-top: 30rpx;

}
.his_clew .list .top{
  display: flex;
  display: -webkit-flex;
  justify-content:space-between;
  align-items:baseline;

}
.his_clew .list .top text:first-child{
  font-size:36rpx;
  color:#0c1b37;
}
.his_clew .list .top text:last-child{
  display: block;
  padding: 14rpx 20rpx;
  background:#f6f7f8;
  border-radius:8rpx;
  font-size:20rpx;
  color:#a2a3a7;
}
.his_clew .list .middle{
  font-size:16px;
  color:#a2a3a7;
  padding: 12rpx 0 30rpx;
}
.his_clew .list .bottom{
  display: flex;
  display: -webkit-flex;
  justify-content:space-between;
  align-items:center;
}
.his_clew .list .img_list{
  display: flex;
  display: -webkit-flex;
  
}
.his_clew .list .img_list image{
  width: 80rpx;
  height: 80rpx;
  display: block;
  border-radius:8rpx;
  margin-left: 10rpx;
}
.his_clew .list .bottom text{
  display: block;
  width: 136rpx;
  height: 52rpx;
  line-height: 52rpx;
  background-color:#eaf7f6;
  font-size:12px;
  color:#2fb6aa;
  text-align: center;
  border-radius:8rpx;
  
  
}