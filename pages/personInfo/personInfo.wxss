/* pages/personInfo/personInfo.wxss */
.person_info{
  height: 100%;
  /* padding: 0 30rpx; */
  background-color: #f1f0f5;
  overflow: auto;
}
.person_info .person_info_from{
  display: block;
  background-color: #fff;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  padding: 0 40rpx;
}
.person_info .info_warp{
  display: flex;
  height: 120rpx;
  line-height: 120rpx;
  font-size:16px;
  color:#0c1b37;
  border-bottom: 2rpx solid #d8d8d8;
}
.person_info .info_warp:last-child{
  border-bottom:none;
}
.person_info .info_warp label{

}
.person_info .info_warp label text,
.person_info .person_info_photo .title text:nth-of-type(1){
  font-size:32rpx;
  color:#f04223;
}
.person_info .info_warp input{
  flex: 1;
  -webkit-flex:1;
  height: 120rpx;
  line-height: 120rpx;
  padding-left: 30rpx;
}
.person_info .person_btn{
  padding: 0 30rpx;
  margin-top: 100rpx;
}
.person_info .person_btn button{
  background:#0b99fb;
  border-radius:12rpx;
  font-size:32rpx;
  color:#ffffff;
}