/* pages/person/person.wxss */
.person{
  height: 100%;
  /* padding: 0 30rpx; */
  background-color: #f1f0f5;
  overflow: hidden;
}
.person .person_from{
  display: block;
  background-color: #fff;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  padding: 0 40rpx;
}
.person .info_warp{
  display: flex;
  height: 120rpx;
  line-height: 120rpx;
  font-size:16px;
  color:#0c1b37;
  border-bottom: 2rpx solid #d8d8d8;
}
.person .info_warp:last-child{
  border-bottom:none;
}
.person .info_warp label{

}
.person .info_warp label text,
.person .person_photo .title text:nth-of-type(1){
  font-size:32rpx;
  color:#f04223;
}
.person .info_warp input{
  flex: 1;
  -webkit-flex:1;
  height: 120rpx;
  line-height: 120rpx;
  padding-left: 30rpx;
}

.person .person_photo{
  padding: 40rpx;
  background-color: #fff;
}
.person .person_photo .title{
  font-size:32rpx;
  color:#0c1b37;
  margin-bottom: 30rpx;
}
.person .person_photo .title text:nth-of-type(2){
  font-size:30rpx;
  color:#a2a3a7;
}
.person .person_photo .photo_warp{
    display: flex;
    display: -webkit-flex;
    justify-content: space-between;
}
.person .person_photo .photo_warp image{
  width: 320rpx;
  height: 196rpx;
}
.person .person_btn{
  padding: 0 30rpx;
  margin-top: 100rpx;
}
.person .person_btn button{
  background:#0b99fb;
  border-radius:12rpx;
  font-size:32rpx;
  color:#ffffff;
}